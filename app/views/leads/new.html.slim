= render 'header'

= simple_form_for @lead do |f|
  .form-group
    = f.input :customer_full_name, input_html: {class: 'form-control'}
  .form-group
    = f.input :business_name, input_html: {class: 'form-control'}

  .form-group
    = f.input :email, input_html: {class: 'form-control'}

  .form-group
    = f.input :telephone_number, input_html: {class: 'form-control'}

  = f.button :submit, 'Request callback', class: 'btn btn-primary'
